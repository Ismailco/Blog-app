<%
=begin%>
 <div>
  <%= link_to new_user_post_path(@user.id), class: "link-info" do %>
    <button>Create new post</button>
  <% end %>
</div>
<div class="users-ctn">
  <% @users.each do |user| %>
    <div class="user-ctn">
      <img class="user-img" src="<%= user.photo %>" alt="image">
      <%= link_to user_path(user.id), class: "link-info" do %>
        <div class="user-l-info">
          <h5><%= user.name %></h5>
          <h5>Number of posts : <%= user.posts_counter %></h5>
        </div>
      <% end %>
    </div>
  <% end %>
</div> 
<%
=end%>

<section class="user-section">
<%= render @user %>
<article class="comments">
<%@user.posts.each do |post| %>
    <%= render post %>
<%end%>
</article>

 <%= link_to "new", new_user_post_path(@user.id), class: 'post-btn' %> 
</section>